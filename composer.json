{
    "name" : "bretrzaun/statuspage",
    "description": "Adds a status page to a Silex app",
    "license": "MIT",
    "authors" : [
        {
            "name" : "Bret R. Zaun",
            "email" : "bretrzaun@hotmail.com"
        }
    ],
    "autoload" : {
        "psr-4" : {
            "BretRZaun\\StatusPage\\" : "src/"
        }
    },
    "require": {
        "php" : ">=7.0",
        "twig/twig": "^1.23|^2.0",
        "guzzlehttp/guzzle": "^6.0"
    },
    "require-dev" : {
        "silex/silex": "^2.0",
        "phpunit/phpunit" : "^6.0",
        "symfony/browser-kit": "^3.3",
        "symfony/css-selector": "^3.3",
        "doctrine/dbal": "~2.2",
        "elasticsearch/elasticsearch": "*"
    },
    "suggest": {
        "doctrine/dbal" : "for checking DB connections",
        "elasticsearch/elasticsearch" : "for checking Elasticsearch"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "2.0.x-dev"
        }
    }
}
